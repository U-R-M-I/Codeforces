#include <bits/stdc++.h>
using namespace std;

int main() {
    ios::sync_with_stdio(false);
    cin.tie(nullptr);
    cout.tie(nullptr);
    int t;
cin>>t;
while(t--)
{
int n,f=0;
cin>>n;
string s;
cin>>s;
for(int i=0;i<n;i++)
{
if(s[i]!=s[i+1])
{
for(int j=i+1;j<n;j++)
if(s[i]==s[j])
f=1;
}
}
if(f==1)
cout<<"NO"<<endl;
else
cout<<"YES"<<endl;
}
    return 0;
}
