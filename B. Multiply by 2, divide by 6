#include <bits/stdc++.h>
using namespace std;
#define int long long
void answer() {
    int n; cin >> n;
    int two = 0, three = 0;
    while(n % 2 == 0){
        n /= 2;
        two++;
    }
    while(n % 3 == 0){
        n /= 3;
        three++;
    }
    if(n > 1){
        cout << "-1" << '\n';
    }
    else{
        if(two == three){
            cout << two << '\n';
        }
        else if(two > three){
            cout << "-1" << '\n';
        }
        else{
            cout << 2 * three - two << '\n';
        }
    }
        
        
}
 
int32_t main() {
    ios_base::sync_with_stdio(0);
    cin.tie(0);
    cout.tie(0);
    int tc = 1;
    cin >> tc;
    while (tc--) {
        answer();
    }
 
    return 0;
}
