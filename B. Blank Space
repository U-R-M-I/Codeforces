#include<bits/stdc++.h>
using namespace std;
int main ()
{
    ios::sync_with_stdio(false);
    cin.tie(0);
    int t;
    cin>>t;
   
    while (t--)
    {
        int n;
        cin>>n;
        int arr[n];
        for(int i=1;i<=n;i++) cin>>arr[i];
        int max_0=0,current_0=0;
        for(int i=1;i<=n;i++)
        {
            if(arr[i]==0)
           {
               current_0++;
               max_0=max(max_0,current_0);
           }
           else current_0=0;
        }
        cout<<max_0<<endl;
    }
    
    return 0;
}
