#include <bits/stdc++.h>
using namespace std;
 
int main() {
    ios::sync_with_stdio(0);
    cin.tie(0);
 
    int t;
    cin >> t;
 
    while(t--){
        int n;
        cin >> n;
 
        multiset<int> st;
        vector<int> a(n);
 
        for(int i=0; i<n; i++) cin >> a[i];
        int cnt0 = 0;
 
        for(int i=n-1; i>=0; i--){
            if(a[i]==0) cnt0++;
            else {
                st.insert(a[i]);
                while(st.size()>cnt0) 
                    st.erase(st.begin());
            }
        }
 
        long long ans = 0;
        for(int x : st) ans += x;
        cout << ans << endl;
    }
}
