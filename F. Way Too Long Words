#include <bits/stdc++.h>
using namespace std;
int main()
{
    int t;
    cin>>t;
     string s;
     int count=0;
    while(t--)
    {
     cin>>s;
     for(int i=0;s[i]!='\0';i++)
     {
         count++;
     }
     if(count>10)
     {
         cout<<s[0]<<count-2<<s[s.size()-1]<<endl;
     }
     else
     {
         cout<<s<<endl;
     }
    count=0;
    }
     return 0;
}
