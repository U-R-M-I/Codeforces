#include <bits/stdc++.h>
using namespace std;

int main() {
    ios::sync_with_stdio(false);
    cin.tie(nullptr);

    int t;
    cin >> t;
    while (t--) {
        int n;
        cin >> n;
        vector<long long> a(n);
        for (int i = 0; i < n; i++) cin >> a[i];

        long long max_sum = 0;
        for (int i = 0; i < n; i++) max_sum += abs(a[i]);

        int ops = 0;
        bool in_negative = false;
        for (int i = 0; i < n; i++) {
            if (a[i] < 0 && !in_negative) {
                ops++;
                in_negative = true;
            }
            if (a[i] > 0) in_negative = false;
        }

        cout << max_sum << " " << ops << "\n";
    }

    return 0;
}
