#include<bits/stdc++.h>
using namespace std;
int main()
{
    ios::sync_with_stdio(false);
    cin.tie(0);
    cout.tie(0);
    int t;
    cin>>t;
    while (t--)
    {
         int n; 
         cin >> n;

        if ((n / 2) % 2 != 0)
         {
            cout << "NO\n";
        }
         else 
         {
            cout << "YES\n";
            vector<int> a, b;
            int sum_even = 0, sum_odd = 0;

            for (int i = 1; i <= n / 2; i++)
             {
                a.push_back(i * 2);
                sum_even += i * 2;
            }
            for (int i = 1; i < n / 2; i++) {
                b.push_back(i * 2 - 1);
                sum_odd += i * 2 - 1;
            }

            b.push_back(sum_even - sum_odd);

            for (int x : a)
             cout << x << " ";
            for (int x : b) 
            cout << x << " ";
            cout << "\n";
        }
    }
   return 0;
    }
