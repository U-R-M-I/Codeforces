#include <bits/stdc++.h>
using namespace std;

int main() {
    ios::sync_with_stdio(false);
    cin.tie(nullptr);

    int n;
    if (!(cin >> n)) return 0;

    if (n % 2 == 0) {
        int k = n / 2;
        cout << k << "\n";
        for (int i = 0; i < k; ++i) {
            if (i) cout << ' ';
            cout << 2;
        }
        cout << '\n';
    } else {
        int k = (n - 3) / 2 + 1; // (n-3)/2 twos + one 3
        cout << k << "\n";
        for (int i = 0; i < (n - 3) / 2; ++i) {
            cout << 2 << ' ';
        }
        cout << 3 << "\n";
    }

    return 0;
}
