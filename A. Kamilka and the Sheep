#include <bits/stdc++.h>
using namespace std;
 
#define ll long long
 
int main()
{
    ios_base::sync_with_stdio(0);
    cin.tie(0);
    cout.tie(0);
 
    int t;
 
    cin >> t;
 
    while(t--)
    {
        ll n;
 
        cin >> n;
 
        vector<ll> v(n);
 
        for(auto &i : v)
            cin >> i;
 
        sort(v.begin(), v.end());
 
        cout << v.back() - v[0] << "\n";
    }
 
    return 0;
}
