#include <bits/stdc++.h>
using namespace std;
typedef long long ll;
#define sz(yo) (ll)yo.size()
 
void solve()
{
    ll n;
    cin >> n;
    vector<ll> a(n);
    for (ll i = 0;i < n;i++)
        cin >> a[i];
 
    if (!is_sorted(a.begin(), a.end()))
    {
        cout << 0 << '\n';
        return;
    }
 
    ll ans = LLONG_MAX;
    for (int i = 0;i < (n - 1);i++)
        ans = min(ans, abs(a[i] - a[i + 1]));
 
    ll res = (ans / 2) + 1;
    cout << res << '\n';
}
 
int main()
{
    ios_base::sync_with_stdio(false);
    cin.tie(nullptr);
 
    ll t;
    t = 1;
    cin >> t;
    for (ll cs = 1; cs <= t; cs++)
    {
        // cout << "Case " << cs << ": ";
        solve();
    }
    return 0;
}
