#include <bits/stdc++.h>
using namespace std;
 
#define ll long long
#define nl '\n'
 
void answer() {
    int n, k; cin >> n >> k;
    for (int i = 1; i <= n; i++) {
        cout << (i <= k ? '1' : '0');
    }
    cout << nl;
}
    
int32_t main() {
    ios_base::sync_with_stdio(0); cin.tie(0);
    
    int t = 1; cin >> t;
    for (int i = 1; i <= t; i++) {
        answer();
    }
    return 0;
}
