#include <bits/stdc++.h>
using namespace std;

int main() {
    ios::sync_with_stdio(false);
    cin.tie(nullptr);

    int t;
    if (!(cin >> t)) return 0;
    while (t--) {
        long long a,b,c,n;
        cin >> a >> b >> c >> n;
        long long mx = max(a, max(b,c));
        long long need = (mx - a) + (mx - b) + (mx - c);
        if (n < need) {
            cout << "NO\n";
        } else {
            long long rem = n - need;
            if (rem % 3 == 0) cout << "YES\n";
            else cout << "NO\n";
        }
    }
    return 0;
}
