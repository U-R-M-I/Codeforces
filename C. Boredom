#include <bits/stdc++.h>
using namespace std;
 
const int maxN = 1e5 + 10;
void solve()
{
    long long n, maxi = LLONG_MIN;
    cin >> n;
    vector<long long> dp(maxN, -1), cnt(maxN);
    for (int i = 0;i < n;i++)
    {
        long long in;
        cin >> in;
        cnt[in]++;
        maxi = max(in, maxi);
    }
    dp[0] = 0;
    dp[1] = cnt[1];
    for (int i = 2;i < maxN;i++)
        dp[i] = max(dp[i - 1], dp[i - 2] + cnt[i] * i);
    cout << dp[maxi] << '\n';
}
 
int main()
{
    ios::sync_with_stdio(false);
    cin.tie(0);
    int t;
    t = 1;
    // cin >> t;
    for (int i = 1; i <= t; i++)
    {
        // cout << "Case " << i << ": ";
        solve();
    }
    return 0;
}
