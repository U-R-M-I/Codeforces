#include <bits/stdc++.h>
using namespace std;
 
int main() {
    ios::sync_with_stdio(false);
    cin.tie(NULL);
 
    int t;
    cin >> t;
    while (t--) {
        int n;
        string s;
        char ch;
        cin >> n >> ch;
        cin >> s;
        s += s;
 
        set<int> st;
        for (int i = 0;i < 2 * n;i++) {
            if (s[i] == 'g') {
               st.insert(i + 1);
            }
        }
 
        int ans = INT_MIN;
        for (int i = 0;i < n;i++) {
            if (s[i] == ch) {
                auto LB = st.lower_bound(i + 1);
                int diff = (*LB - (i + 1));
                ans = max(ans, diff);
            }
        }
        cout << ans << '\n';
    }
    return 0;
}
