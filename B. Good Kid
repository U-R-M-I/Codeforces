#include <bits/stdc++.h>
using namespace std;

int main() {
    ios::sync_with_stdio(false);
    cin.tie(nullptr);

    int t;
    cin >> t;
    while (t--) {
        int n;
        cin >> n;
        vector<long long> a(n);
        for (int i = 0; i < n; i++) cin >> a[i];

        long long best = 0;
        for (int i = 0; i < n; i++) {
            long long product = 1;
            for (int j = 0; j < n; j++) {
                if (j == i) product *= (a[j] + 1);
                else product *= a[j];
            }
            best = max(best, product);
        }
        cout << best << "\n";
    }
    return 0;
}
